<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.main.SettingFragment">

    <Button
        android:id="@+id/btn_changeInfo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        android:background="@drawable/button_background"
        android:text="Change information" />

    <Button
        android:id="@+id/btn_changePass"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_changeInfo"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:text="Change password"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_changePass"
        android:layout_centerInParent="true"
        android:background="@drawable/button_background"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="Sign out" />

</RelativeLayout>